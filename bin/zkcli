#!/usr/bin/env perl
use strict; use warnings;
use App::ZooKeeper::CLI;
use Term::ReadLine;
use Try::Tiny;

my $hosts = shift || 'localhost:2181';
my $cli   = App::ZooKeeper::CLI->new(hosts => $hosts);

my $read = -t STDIN ? sub { $cli->readline } : sub { <STDIN> };
while (defined (my $line = $read->())) {
    $cli->execute($line);
}

